<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>
        <variable
            name="streamDetails"
            type="com.example.animenation.dashboard.shared.presentation.video.dto.StreamingLink" />

        <variable
            name="canLoading"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/parent_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/black"
        android:animateLayoutChanges="true"
        tools:context=".dashboard.shared.presentation.video.presentation.VideoStreaming">

        <VideoView
            android:id="@+id/stream_video"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            bind:streamLink="@{streamDetails.sources.get(1).url}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/widget_controls"
            android:visibility="gone"
            layout="@layout/widget_video_controls_item"/>

        <ProgressBar
            android:id="@+id/stream_loading"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:indeterminateTint="@color/red"
            android:indeterminate="@{canLoading}"
            bind:visible="@{canLoading}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>