<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WatchFlix" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/second_btn_text</item>
    </style>

    <style name="CustomChipBtnStyle" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipBackgroundColor">@color/main_background</item>
        <item name="android:textColor">@color/chip_txt_color</item>
        <item name="chipStrokeColor">@color/red</item>
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="CustomBottomBarStyle" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/main_background</item>
    </style>

    <style name="BottomNavigationView">
        <item name="fontFamily">@font/sf_pro_text_regular</item>
    </style>

    <style name="TextViewShadow">
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
    </style>
</resources>