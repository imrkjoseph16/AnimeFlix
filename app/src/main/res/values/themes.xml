<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MatchWrapParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WrapParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ConstraintParent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Base application theme. -->
    <style name="Base.Theme.AnimeNation" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@color/second_btn_text</item>
    </style>

    <style name="CustomBottomBarStyle" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/main_background</item>
    </style>

    <style name="BottomNavigationView">
        <item name="fontFamily">@font/sf_pro_text_regular</item>
    </style>

    <style name="CustomChipBtnStyle" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipBackgroundColor">@color/main_background</item>
        <item name="android:textColor">@color/chip_txt_color</item>
        <item name="chipStrokeColor">@color/red</item>
        <item name="strokeWidth">3dp</item>
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@drawable/background_edittext</item>
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="EditTextViewStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/background_edittext</item>
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="ThemeDialog" parent="android:Theme.Holo.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="Theme.AnimeNation" parent="Base.Theme.AnimeNation" />

    <style name="TabLayoutTheme" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/sf_pro_text_medium</item>
    </style>

    <style name="TextViewShadow">
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
    </style>
</resources>