<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_home"
    app:startDestination="@id/anime_list_fragment">

    <include app:graph="@navigation/nav_graph_details"/>

    <fragment
        android:id="@+id/anime_list_fragment"
        android:name="com.example.animenation.dashboard.pages.home.list.AnimeListFragment"
        android:label="AnimeListFragment"
        tools:layout="@layout/fragment_list_anime">

        <action
            android:id="@+id/action_to_search_anime_screen"
            app:destination="@id/search_anime_fragment" />
    </fragment>

    <fragment
        android:id="@+id/search_anime_fragment"
        android:name="com.example.animenation.dashboard.pages.home.search.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search"/>

    <action
        android:id="@+id/action_to_anime_details_screen"
        app:destination="@id/nav_graph_details">

        <argument
            android:name="argument"
            app:argType="com.example.animenation.dashboard.shared.presentation.details.DetailsArguments"/>
    </action>

</navigation>