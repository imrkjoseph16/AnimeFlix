<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_explore"
    app:startDestination="@id/explore_fragment">

    <include app:graph="@navigation/nav_graph_details"/>

    <fragment
        android:id="@+id/explore_fragment"
        android:name="com.example.animenation.dashboard.pages.explore.presentation.FindAnimeMoviesFragment"
        android:label="ExploreFragment"
        tools:layout="@layout/fragment_find_anime_movies">

        <action
            android:id="@+id/action_to_anime_details_screen"
            app:destination="@id/nav_graph_details">

            <argument
                android:name="argument"
                app:argType="com.example.animenation.dashboard.shared.presentation.details.DetailsArguments"/>
        </action>
    </fragment>
</navigation>